@{
    ViewData["Title"] = "Film List";
}

@model List<ApplicationResponse>

<h1 class="display-4">@ViewData["Title"]</h1>

<table class="table table-bordered table-striped">

    <thead class="font-weight-bold">
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To:</td>
            <td>Notes</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Category.CategoryName</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.LentTo</td>
                <td>@x.Notes</td>

                <td><a asp-controller="Home" asp-action="Edit" asp-route-filmid="@x.FilmId">Edit</a></td>
                <td><a asp-controller="Home" asp-action="Delete" asp-route-filmid="@x.FilmId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>